<h1>Edit Picture Form</h1>

<%= form_tag("http://localhost:3000/update_picture/#{@picture.id}", :method => "patch") do %>

  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" type="text" name="caption" value=<%= @edit_pic.caption %>>
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" name="source" value = <%= @edit_pic.source %>>
  </div>
  <div>
    <input type="submit" value="Create Picture">
  </div>


<% end %>